<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/recyclerViewImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/stars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/starPlace"
        android:layout_marginTop="40dp"
        android:text="Hello"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:layout_alignLeft="@id/recyclerViewImage"
        android:layout_alignTop="@id/recyclerViewImage"
        android:layout_alignRight="@id/recyclerViewImage"
        android:layout_alignBottom="@id/recyclerViewImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/recyclerViewImage"
        app:layout_constraintTop_toTopOf="@id/recyclerViewImage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/recyclerViewAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewQuote"/>

    <TextView
        android:id="@+id/recyclerViewQuote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="tools"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/recyclerViewImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>